metadata:
  name: natural-lang
spec:
  description: "Showcases natural language processing"
  env:
    - name: MANIPULATION_KIND
      value: {{ .targetLang }}
  handler: "main:handler"
  maxReplicas: 1
  minReplicas: 1
  runtime: "python:3.6"
  build:
    commands:
      - 'pip install textblob'
    functionSourceCode: {{ .SourceCode }}
    codeEntryType: sourceCode
  env:
    - name: TO_LANG
      value: fr

