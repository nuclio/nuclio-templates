spec:
  description: "A simple v3io-frames usage for PutItem using MySQL public DB"
  handler: "main:handler"
  env:
    - name: CONTAINER
      value: {{ .Container }}
    - name: TABLE
      value: {{ .Table }}
    - name: IGZ_V3F
      value: {{ .IgzV3f }}
    - name: IGZ_USER
      value: {{ .IgzUser }}
    - name: IGZ_PWD
      value: {{ .IgzPwd }}
    - name: SQL_HOST
      value: {{ .SqlHost }}
    - name: SQL_PORT
      value: {{ .SqlPort }}
    - name: SQL_USER
      value: {{ .SqlUser }}
    - name: SQL_PWD
      value: {{ .SqlPwd }}
    - name: SQL_DB_NAME
      value: {{ .SqlDBName }}
    - name: SQL_QUERY
      value: {{ .SqlQuery }}
  runtime: "python:3.9"
  minReplicas: 1
  maxReplicas: 1
  build:
    functionSourceCode: {{ .SourceCode }}
    commands:
      - pip install v3io-frames sqlalchemy mysqlclient pandas
    baseImage: "python:3.9"
