metadata:
  name: kafka-to-kv
spec:
  build:
    functionSourceCode: {{ .SourceCode }}
    commands:
    - pip install requests
  description: "Listens on given kafka topics and inserts given events to KV"
  handler: "main:handler"
  runtime: "python:3.9"
  env:
  - name: WEB_API_HOST_AND_PORT
    value: {{ .WebAPIHostAndPort }}
  - name: TABLE_NAME
    value: {{ .TableName }}
  - name: CONTAINER_NAME
    value: {{ .ContainerName }}
  - name: USERNAME
    value: {{ .Username }}
  - name: PASSWORD
    value: {{ .Password }}
  - name: EVENT_KEY
    value: {{ .EventKey }}
  minReplicas: 1
  maxReplicas: 1
  triggers:
    kafkaTrigger:
      kind: kafka-cluster
      attributes:
        consumerGroup: {{ .ConsumerGroup }}
        initialOffset: {{ .InitialOffset }}
        topics:
        - {{ .Topic }}
        brokers:
        - {{ .Broker }}
